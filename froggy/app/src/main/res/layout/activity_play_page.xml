<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7dbaf7"
    tools:context=".PlayPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pointsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Points: 0"
            android:fontFamily="sans-serif-black"
            android:textSize="@android:dimen/app_icon_size"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/missPointsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/pointsId"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-black"
            android:text="miss: 0"
            android:textSize="@android:dimen/app_icon_size"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:columnCount="3"
        android:id="@+id/gridId"
        android:rowCount="3">

        <Button
            android:id="@+id/img0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="@drawable/leaf" />

        <Button
            android:id="@+id/img1"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img2"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img3"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img4"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img5"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img6"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img7"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

        <Button
            android:id="@+id/img8"
            android:background="@drawable/leaf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"

            />

    </GridLayout>

    <TextView
        android:id="@+id/timerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/gridheartID">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/heart"
            android:id="@+id/heart1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/heart"
            android:id="@+id/heart2"/>/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/heart"
            android:id="@+id/heart3"/>/>

    </LinearLayout>
 </LinearLayout>
